{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div class="container">
      <form>

        <div class="form-group">
          <label for="content">Answer content</label>
          {{input value=content id="content" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="author">Author name</label>
          {{input value=author id="author" class="form-control"}}
        </div>

        <button class="btn" {{action 'save1'}}>Save</button>

      </form>
    </div>
{{else}}
    <button class="btn" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
